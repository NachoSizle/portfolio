---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { BASE_URL } from '../../constants';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = await getCollection('projects');
const project = projects.find((p) => p.slug === slug);
if (!project) throw new Error('Not Found');
const content = project.data;

// Renderizar el contenido del MDX
const { Content } = await project.render();

// Seguridad: asegurar que stack es siempre un array
const stack = Array.isArray(content.stack) ? content.stack : [];

// Helper para traducir o usar valor directo
function translateOrRaw(value: string): string {
  if (value.startsWith('projects.')) {
    return t(value as any) || value;
  }
  return value;
}

// Obtener valores traducidos
const title = translateOrRaw(content.title);
const description = translateOrRaw(content.description);
---
<BaseLayout title={title} description={description}>
  <section class="relative isolate overflow-hidden" aria-labelledby="project-section">
    <!-- BotÃ³n de volver integrado en el contenedor -->
    <div class="mx-auto max-w-4xl px-6 pt-8 pb-4">
      <a
        href={`${BASE_URL}/`}
        class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-300 group select-none"
        aria-label="Volver a proyectos"
      >
        <svg class="w-5 h-5 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <span class="font-medium">Volver a proyectos</span>
      </a>
    </div>
    <div class="mx-auto max-w-4xl px-6 pb-24 text-center">
      {content.cover && (
        <div class="relative mb-12 group/cover mx-auto">
          <div class="absolute -inset-4 bg-gradient-to-r from-emerald-400 via-green-500 to-teal-600 rounded-3xl opacity-20 group-hover/cover:opacity-40 blur-2xl transition-opacity duration-700"></div>
          <Image
            src={content.cover}
            alt={`Cover de ${title}`}
            width={1275}
            height={850}
            class="relative w-full h-auto object-cover rounded-2xl shadow-2xl border-4 border-white/20 dark:border-neutral-800/30 transition-transform duration-700 group-hover/cover:scale-105"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl opacity-0 group-hover/cover:opacity-100 transition-opacity duration-700"></div>
        </div>
      )}
      <div class="space-y-8">
        <header class="space-y-6">
          <h1 id="project-section" class="text-4xl font-extrabold tracking-tight sm:text-5xl md:text-6xl text-balance md:leading-20 select-none bg-gradient-to-r from-gray-900 via-gray-700 to-gray-900 dark:from-white dark:via-gray-300 dark:to-white bg-clip-text text-transparent">
            {title}
          </h1>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 flex-wrap">
            {content.date && (
              <div class="inline-flex items-center gap-3 px-6 py-3 rounded-full bg-gray-100 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 shadow-lg select-none">
                <svg class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="font-semibold text-gray-800 dark:text-gray-200">{content.date.toLocaleDateString('es-ES', { month: 'long', year: 'numeric' })}</span>
              </div>
            )}

            {stack.length > 0 && (
              <ul class="flex flex-wrap justify-center gap-3" role="list" aria-label={`Stack de ${title}`}>
                {stack.map((tech, index) => (
                  <li class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/30 text-gray-800 dark:text-gray-200 font-medium shadow-sm hover:shadow-md transition-shadow duration-300 select-none" style={`animation-delay: ${index * 0.1}s;`}>
                    <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
                    {tech}
                  </li>
                ))}
              </ul>
            )}
          </div>
        </header>

        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
          {content.demoLink && (
            <a
              href={content.demoLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2.5 text-base font-semibold shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-500 select-none"
              aria-label={`Demo de ${title}`}
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Ver Demo
            </a>
          )}
          {content.repoLink && (
            <a
              href={content.repoLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 rounded-lg border-2 border-emerald-600 text-emerald-600 dark:text-emerald-400 hover:bg-emerald-600 hover:text-white dark:hover:text-white px-6 py-2.5 text-base font-semibold shadow-lg hover:shadow-xl transition-all duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-emerald-500 select-none"
              aria-label={`Repositorio de ${title}`}
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Ver Repositorio
            </a>
          )}
        </div>

        <!-- Contenido del proyecto (renderizado desde MDX) -->
        {Content && (
          <article class="mt-16 mx-auto max-w-3xl text-left space-y-6">
            <div class="project-content text-gray-800 dark:text-gray-200">
              <Content />
            </div>
          </article>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<style is:global>
  .project-content h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: rgb(17 24 39);
  }

  :root.dark .project-content h2 {
    color: rgb(255 255 255);
  }

  .project-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: rgb(31 41 55);
  }

  :root.dark .project-content h3 {
    color: rgb(243 244 246);
  }

  .project-content h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    color: rgb(55 65 81);
  }

  :root.dark .project-content h4 {
    color: rgb(229 231 235);
  }

  .project-content p {
    font-size: 1rem;
    line-height: 1.75rem;
    margin-bottom: 1rem;
    color: rgb(55 65 81);
  }

  :root.dark .project-content p {
    color: rgb(209 213 219);
  }

  .project-content ul,
  .project-content ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    color: rgb(55 65 81);
  }

  :root.dark .project-content ul,
  :root.dark .project-content ol {
    color: rgb(209 213 219);
  }

  .project-content ul {
    list-style-type: disc;
  }

  .project-content ol {
    list-style-type: decimal;
  }

  .project-content li {
    margin-bottom: 0.5rem;
    margin-left: 1rem;
  }

  .project-content strong {
    font-weight: 600;
    color: rgb(17 24 39);
  }

  :root.dark .project-content strong {
    color: rgb(255 255 255);
  }

  .project-content em {
    font-style: italic;
  }

  .project-content code {
    background-color: rgb(243 244 246);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: ui-monospace, monospace;
    color: rgb(5 150 105);
  }

  :root.dark .project-content code {
    background-color: rgb(31 41 55);
    color: rgb(52 211 153);
  }

  .project-content pre {
    background-color: rgb(243 244 246);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  :root.dark .project-content pre {
    background-color: rgb(31 41 55);
  }

  .project-content pre code {
    background-color: transparent;
    padding: 0;
    color: rgb(31 41 55);
  }

  :root.dark .project-content pre code {
    color: rgb(229 231 235);
  }

  .project-content a {
    color: rgb(5 150 105);
    text-decoration: underline;
    transition: color 0.2s;
  }

  .project-content a:hover {
    color: rgb(4 120 87);
  }

  :root.dark .project-content a {
    color: rgb(52 211 153);
  }

  :root.dark .project-content a:hover {
    color: rgb(110 231 183);
  }

  .project-content blockquote {
    border-left: 4px solid rgb(16 185 129);
    padding-left: 1rem;
    font-style: italic;
    color: rgb(75 85 99);
    margin: 1rem 0;
  }

  :root.dark .project-content blockquote {
    color: rgb(156 163 175);
  }
</style>
